@model AppLogisticsModel.EPS

@{
    ViewBag.Title = "Borrar EPS";
}

<h2>@ViewBag.Title</h2>

<h3>Está seguro de borrar este elemento?</h3>
<div>
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NIT)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NIT)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-danger" /> |
            @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-info" })
        </div>
    }
</div>
